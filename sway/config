# main keys
set $mod Mod4
floating_modifier $mod normal
set $left h
set $down j
set $up k
set $right l

# applications
set $term "kitty"
set $scratch "kitty --class=scratch"
set $menu "rofi -show drun > /dev/null 2>&1 -theme ~/.config/rofi/config.rasi"
set $powermenu "~/.local/bin/powermenu.sh > /dev/null 2>&1"
set $browser "firefox > /dev/null 2>&1"
set $lock "swaylock"
set $lab "jupyter-lab"
set $calc "kitty -e --class=calculator bc -lq"
set $mount "kitty -e --class=bashmount bashmount"

# appearance
default_border none
default_floating_border none
gaps inner 4
gaps outer 0

# swayfx
#corner_radius 8
#blur enable
#blur_xray disable
#blur_passes 2
#blur_radius 5
#shadows off
# shadows_on_csd off
# shadow_blur_radius 20
# shadow_color #0000007F
#default_dim_inactive 0.0
# dim_inactive_colors.unfocused #000000FF
# dim_inactive_colors.urgent #900000FF
#scratchpad_minimize enable

# inputs
# list inputs: swaymst -t get_inputs
input "2:7:SynPS/2_Synaptics_TouchPad" {
  dwt enabled
  tap enabled
  natural_scroll enabled
  middle_emulation enabled
}

input "1:1:AT_Translated_Set_2_keyboard" {
  xkb_layout "it"
}

# outputs
# list outputs: swaymsg -t get_outputs
output eDP-1 {
  resolution 1920x1080
  bg ~/.config/sway/config.d/wp/board.png fill
}

# status bar
bar {
  swaybar_command waybar
}

# includes
include /etc/sway/config.d/*
include ~/.config/sway/config.d/*.conf
